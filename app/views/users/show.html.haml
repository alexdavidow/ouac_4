#user-container
  #user-profile-pic
    %img{src: '#'}
  #user-info-container
    %table
      %thead
        %th
          Name
        %th
          Email
      %tbody
        %tr
          = current_user.name
        %tr
          = current_user.email
  #user-button-list
    = link_to 'Edit Account', edit_user_registration_path, class: 'button'
    = link_to 'Delete Account', delete_user_path(current_user.id), method: :delete, confirm: 'Are you sure you want to permanently delete your account? You cannot recover it at a later date.', class: 'button'
  #user-orders.ten.column
    .row.center
      %h3
        Order History
      #order-history
        / If user order history is empty (or the orders are older than X days) display "You have no previous orders within the past X days."
        / Else display all the orders from their cart history
