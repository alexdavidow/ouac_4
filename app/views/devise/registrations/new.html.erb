<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %> <br />
  <%= f.text_field :name, :autofocus => true, placeholder: :name %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, placeholder: :email %></div>

  <div><%= f.label :phone %><br />
  <%= f.telephone_field :phone, placeholder: "555-555-5555"%></div>

  <div><%= f.label :address %><br />
  <%= f.text_field :address, placeholder: "123 Example Street, Brooklyn, New York" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, placeholder: :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, placeholder: "password confirmation" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
