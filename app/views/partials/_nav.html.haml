.nav.top-bar
  %ul.title-area
    %li
      %a{:href => root_path}
        %img#nav_img{:src => "/OUAC-thumbnail.png"}
    %li.divider
  .top-bar-section.right
    %ul.inline-list
      %li.divider
      %li
        = link_to 'Summer 2013 Menu', products_path
      %li.divider
      %li
        %a{:href => "/custom_creator"} 
          Cupcake Creator
      %li.divider
      %li
        = link_to 'Cupcake Game!', cupcakes_path
      %li.divider
      %li
        = link_to 'About', about_path
      %li.divider
      %li
        = link_to 'Contact', contact_path
      %li.divider
    %ul.right
      - if user_signed_in? 
        %li.has-dropdown
          %a{href: '#'}
            = current_user.email
          %ul.dropdown
            %li
              = link_to('My Account', user_path(current_user.id))
            %li.divider
            %li
              = link_to 'Sign Out', destroy_user_session_path, method: :delete 
        %li
          = link_to 'Cart', shopping_cart_path(current_cart.id)
      - else
        %li
          =link_to 'Sign In', new_user_session_path
