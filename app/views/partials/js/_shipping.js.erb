function updateAddress(e){
  e.preventDefault();
  
  var address = $("textarea[name='Address']").val()
  var name = $("textarea[name='Name']").val()
  var email = $("textarea[name='Email']").val()
  var phone_number = $("textarea[name='Phone']").val()
  var date = $("input[name='Date']").val()

  if (name === "" || email === "" || address === "" || phone_number === "" || date === "") {
    alert("No fields can be blank")
  } else {

    var params = {
      order: {
        name: name,
        mailing_address: address,
        phone_number: phone_number,
        email: email,
        delivery_date: date,
        id: "<%= @order.id %>"
      }
    }

    $.ajax({
      type: 'PATCH',
      url: "/orders/<%= @order.id %>",
      
      data: params
    })
  }
}

$(function(){
  $('#update_user_button').on('click', updateAddress);
})